@model AspNetCoreTemplate.Web.ViewModels.Client.IndexClientViewModel
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<link href="~/css/Clients.css" rel="stylesheet" asp-append-version="true" />
<div id="testimonials">
    <form action=" /Clients/Add" class="">
        <button type="float-left submit-button">Add Client</button>
    </form>
    <div class="container _tm-header">
        <h1 class="text-center">Clients</h1>
    </div>

    <div class="container">
        <div class="row">
            @foreach (var item in Model.Clients)
            {
                <div class="col-12 col-lg-3">
                    <div class="card">
                        <img class="card-img-top img-fluid card-image" src="@item.ImageUrl" alt="Card image cap">
                        <div class="card-body">
                            <p class="text-center">@item.Name</p>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>