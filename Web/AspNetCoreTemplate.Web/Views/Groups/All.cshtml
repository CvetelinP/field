@model AspNetCoreTemplate.Web.ViewModels.Group.GroupViewModel
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container">
    <table class="table">
        <form action="/Groups/Add">
            <button type="submit" class="btn btn-dark text-uppercase ">Add Group</button>
        </form>
        <hr />
        <partial name="_ButtonSearch" />
        <thead class="thead-dark">
            <tr>
                
                <th scope="col">Group Name</th>
                <th scope="col">Promoters</th>
                <th class="border-primary">&nbsp;</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Groups)
            {
                <tr>
                    
                    <th scope="row" class="text-center">@item.Name</th>
                    <th class="text-center">
                        <a href="/Groups/GetPromoters?Id=@item.Id">@item.PromotersCount</a>
                    </th>
                    <td style="width: 10%;">
                        <a href="/Groups/Remove?Id=@item.Id" class="table-link danger">
                            <span class="fa-stack">
                                <i class="fa fa-square fa-stack-2x"></i>
                                <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                            </span>
                        </a>
                    </td>
                    <hr>
                </tr>

            }
        </tbody>
    </table>

</div>
