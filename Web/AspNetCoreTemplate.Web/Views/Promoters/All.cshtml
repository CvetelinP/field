@model IndexViewModel
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container">
    <div class="row">
        <div class="col-lg-12">
          
            <form action="/Promoters/Add" class="">
                <button type="float-left submit-button">Add Promoter</button>
            </form>
            <input class="form-control mr-sm-2" type="text" placeholder="Search">
            <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                
            <div class="main-box clearfix">
                <div class="table-responsive">
                    <table class="table user-list">
                        <thead>
                            <tr>

                                <th><span>Name</span></th>
                                <th><span>Id</span></th>
                                <th><span>Gender</span></th>
                                <th><span>City</span></th>
                                <th><span>Email</span></th>
                                <th>&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Promoters)
                            {
                                <tr>
                                    <td>
                                        <img src="@item.ImageUrl" alt="">
                                        <a class="user">@item.FirstName @item.LastName </a>
                                    </td>

                                    <td>
                                        @item.Id
                                    </td>
                                    <td class="text-center">
                                        <span class="label label-default">@item.Gender</span>
                                    </td>
                                    <td>
                                        <a href="#">@item.City</a>
                                    </td>
                                    <td>
                                        <a href="#">@item.Email</a>
                                    </td>
                                    <td style="width: 20%;">
                                        <a href="/Promoters/Profiles?Id=@item.Id" class="table-link">
                                            <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa fa-search-plus fa-stack-1x fa-inverse"></i>
                                            </span>

                                        </a>
                                       
                                        <a href="/Promoters/Remove?Id=@item.Id" class="table-link danger">
                                            <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                                            </span>
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <ul class="pagination pull-right">
                    <li><a href="#"><i class="fa fa-chevron-left"></i></a></li>
                    <li><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li><a href="#"><i class="fa fa-chevron-right"></i></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>