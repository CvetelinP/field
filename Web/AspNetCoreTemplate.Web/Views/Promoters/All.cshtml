@model AspNetCoreTemplate.Web.ViewModels.Promoter.IndexViewModel
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<link href="~/css/PromotersAll.css" rel="stylesheet" asp-append-version="true" />
<br />
<br />
<form asp-action="All" method="get">
    <div class="form-actions no-color">
        <p>
            Find by First name: <input type="text" name="searchStringFirstName" value="@ViewData["CurrentFilter"]" />
            Find by Last name: <input type="text" name="searchStringLastName" value="@ViewData["CurrentFilter1"]" />
            <input type="submit" value="Search" class="btn btn-success" /> |
            <a asp-action="All">Back to Full List</a>
        </p>
    </div>
</form>
<br/>
<form action="/Promoters/Add" class="text-center">
    <button type="submit" class="btn btn-primary text-uppercase ">Add Promoter</button>
</form>
<br />
<br />
<br />


<div class="main-box clearfix">
    <div class="table-responsive">
        <table class="table user-list">
            <thead>
                <tr>

                    <th><span class="text-center"><b>Name/Image</b></span></th>
                    <th><span class="text-center"><b>Id</b></span></th>
                    <th><span class="text-center"><b>Gender</b></span></th>
                    <th><span class="text-center"><b>City</b></span></th>
                    <th><span class="text-center"><b>Email</b></span></th>
                    <th><span class="text-center"><b>Rating</b></span></th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Promoters)
                {
                    <tr>
                        <td>
                            <img width="100" height="100" style="border-radius:10px" src="@item.ImageUrl"
                                 class="card-img-top img-fluid card-image" s>
                            <p class="font-weight-bolder"><b> @item.FirstName @item.LastName</b></p>
                        </td>

                        <td>
                            @item.Id
                        </td>
                        <td class="text-center">
                            <span class="label label-default">@item.Gender</span>
                        </td>
                        <td>
                            @item.City
                        </td>
                        <td>
                            @item.Email
                        </td>
                        <td class="text-center" style="color: crimson">
                            <span class="label label-default">@item.VotesType</span>
                        </td>
                        <td style="width: 20%;">
                            <a href="/Promoters/Profiles?Id=@item.Id" class="table-link">
                                <span class="fa-stack">
                                    <i class="fa fa-square fa-stack-2x"></i>
                                    <i class="fa fa-search-plus fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>

                            <a href="/Promoters/Remove?Id=@item.Id" class="table-link danger">
                                <span class="fa-stack">
                                    <i class="fa fa-square fa-stack-2x"></i>
                                    <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                            <a href="Promoters/AddToGroup" class="table-link danger">
                                <span class="fa-stack">
                                    <i class="fas fa-user-plus"></i>

                                </span>
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
