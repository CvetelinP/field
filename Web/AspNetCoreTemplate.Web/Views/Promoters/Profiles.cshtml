
@model AspNetCoreTemplate.Web.ViewModels.Promoter.PromoterProfileViewModel

<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link href="~/css/BootStrapProfile.css" rel="stylesheet" asp-append-version="true" />
<!------ Include the above in your HEAD tag ---------->

<div class="container emp-profile">
    <form method="post">
        <div class="row">
            <div class="col-md-4">
                <div class="profile-img">
                    <img src="@Model.ImageUrl" alt="" />

                </div>
            </div>
            <div class="col-md-6">
                <div class="profile-head">
                    <h5 style="color: chocolate">
                        @Model.FirstName @Model.LastName
                    </h5>
                    <h6>
                        Age: @Model.Age / City: @Model.City
                    </h6>
                    <div class="text-muted small ml-3">
                        <h2 style="color: chocolate"> Rating</h2>
                        <form id="votesForm" method="post"></form>
                        <div>

                            <a href="#" onclick="sendVote(@Model.Id, true)">
                                <i class="fas fa-hand-point-up"></i>
                            </a>
                        </div>
                        <div id="votesCount" style="color: darkolivegreen">@Model.VotesCount</div>
                        <div>
                            <a href="#" onclick="sendVote(@Model.Id, false)">
                                <i class="fas fa-hand-point-down"></i>
                            </a>
                        </div>
                    </div>


                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">About</a>
                        </li>

                    </ul>
                </div>
            </div>

            <div class="col-md-2">
                <input type="submit" class="btn btn-block btn-primary" name="btnAddMore" value="Edit" />

            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="profile-work">
                    <p>Description</p>
                    <a href="">@Model.Description</a><br />

                    <p>Images</p>

                </div>

            </div>
            <div class="col-md-8">
                <div class="tab-content profile-tab" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <div class="row">
                            <div class="col-md-6">
                                <label>User Id</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.Id</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Name</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.FirstName @Model.LastName</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Email</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.Email</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Phone</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.Mobile</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Gender</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.Gender</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Language</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.Language</p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>


        function sendVote(promoterId, isUpVote) {
            var token = $("#votesForm input[name=__RequestVerificationToken]").val();
            var json = { promoterId: promoterId, isUpVote: isUpVote };
            console.log(json);
            $.ajax({
                url: "/api/votes",
                type: "POST",
                data: JSON.stringify(json),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    $("#votesCount").html(data.votesCount);
                }
            });
        }
    </script>
}