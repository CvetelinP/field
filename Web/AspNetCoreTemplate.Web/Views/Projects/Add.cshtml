@model AspNetCoreTemplate.Web.ViewModels.Project.IndexProjectsViewModel
<form method="Post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group w-50">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" id="name" name="name" placeholder="Project name">
        <span asp-validation-for="Name" class="text-danger"></span>

    </div>
    <div class="form-group w-50">
        <label asp-for="Year"></label>
        <input asp-for="Year" class="form-control" id="name" name="year" placeholder="Year">
        <span asp-validation-for="Year" class="text-danger"></span>

    </div>
    <button type="submit" class="btn btn-primary text-uppercase">Submit</button>
</form>