@using FieldPlatform.Data.Models
@model FieldPlatformWeb.ViewModels.Report.ReportViewModel

<link href="~/css/Projects.css" rel="stylesheet" asp-append-version="true" />
<h4>By @Model.UserUserName</h4>
<form asp-action="GetReport" method="get">

    <a class="btn btn-outline-primary" data-toggle="modal" data-target="#exampleModal">Download file report</a>
    <hr />
    @foreach (var item in Model.Gallery)
    {
        <img src="@item.Url" id="imgProfile" style="width: 250px; height: 250px" class="img-thumbnail"  />
    }
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <textarea style="color: green">Your Download is starting</textarea>
                <embed src="@Model.ReportUrl" class="" style="height: 20px"/>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</form>

