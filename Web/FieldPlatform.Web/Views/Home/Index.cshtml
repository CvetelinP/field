@using FieldPlatform.Common
@model FieldPlatform.Web.ViewModels.Promoter.IndexViewModel
@{
    this.ViewData["Title"] = "Home Page";
}
<link href="~/css/Ivailo.css" rel="stylesheet" asp-append-version="true" />
<h1 class="text-center ">@GlobalConstants.SystemName</h1>
<img class="rounded-circle z-depth-2 center" alt="100x100" src="https://i.ibb.co/NTWYYPM/Field-TEAM.png"
     data-holder-rendered="true">

<div class="text-center">
    <b />
    <br />
    <label class="text-center" style="color: chocolate"; >Our best Promoters </label>
    <div class="wrrp">

        <div class="avatars">
            @foreach (var item in Model.Promoters.OrderByDescending(x => x.VotesType).Take(6))
            {
                <div class="avatar">
                    <div class="thumb"><img width="100" height="100" src="@item.ImageUrl"/></div>
                </div>
            }
        </div>

    </div>
</div>


